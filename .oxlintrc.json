{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "plugins": ["next", "react-perf", "import", "jsx-a11y", "promise", "node"],
  "categories": {
    "correctness": "error",
    "suspicious": "error",
    "perf": "error",
    "style": "warn",
    "restriction": "warn",
    "pedantic": "warn"
  },
  "rules": {
    "no-magic-numbers": "warn",
    "no-null": "off",
    "explicit-function-return-type": "off",
    "sort-imports": "off",
    "no-ternary": "off",
    "no-redeclare": "off",
    "max-dependencies": "off",
    "no-default-export": "off",
    "unambiguous": "off",
    "avoid-new": "off"
  },
  "env": {
    "browser": true
  }
}
