    "@scalar/hono-api-reference": "^0.9.30",
    "@scalar/openapi-to-markdown": "^0.3.12",
    "dayjs": "1.11.19",
    "drizzle-orm": "^0.45.1",
    "drizzle-seed": "^0.3.1",
    "drizzle-zod": "^0.8.3",
    "hono": "^4.11.3",
    "ical-generator": "^10.0.0",
    "nodemailer": "^7.0.12",
    "pg": "^8.16.3",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@types/node": "24.10.4",
    "@types/nodemailer": "7.0.4",
    "@types/pg": "8.16.0",
    "dotenv": "17.2.3",
